@page "/fizzBuzz"

<PageTitle>FizzBuzz</PageTitle>

<h1>FizzBuzz</h1>

<h2>Amount of item : @FizzBuzzList.Count</h2>

@foreach (var item in FizzBuzzList)
{
    <strong>@item</strong>
    <br>
}


@code {

    public List<string> FizzBuzzList { get; set; }
    
    protected override void OnInitialized()
    {
        FizzBuzzList = GetFizzBuzz();
        
        base.OnInitialized();
    }

    public List<string> GetFizzBuzz()
    {
        List<string> result = new List<string>();

        for (int i = 1; i <= 100; i++)
        {
            if (i % 3 == 0 && i % 5 == 0)
            {
                result.Add("FizzBuzz");
            }
            else if (i % 3 == 0)
            {
                result.Add("Fizz");
            }
            else if (i % 5 == 0)
            {
                result.Add("Buzz");
            }
            else
            {
                result.Add(i.ToString());
            }
        }

        return result;
    }

}